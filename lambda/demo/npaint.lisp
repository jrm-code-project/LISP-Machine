(DEFUN INIT-PAINT (X0 Y0 PATTERN-LIST
                      &OPTIONAL (ARY (SCREEN-BUFFER-PIXEL-ARRAY TV-DEFAULT-SCREEN)))
  (PROG (X Y XL YL PAT COUNT)
        (SETQ Y Y0
              XL (+ X0 40)
              YL (+ Y0 40)
              PAT PATTERN-LIST)
   L    (COND ((NOT (< Y YL))
